{
  "name": "rjc-dev-environment",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "run-p start:dev start:api",
    "start:dev": "react-scripts start",
    "build": "react-scripts build --stats && webpack-bundle-analyzer build/bundle-stats.json -m server",
    "test": "react-scripts test",
    "test:ci": "cross-env NODE_ENV=CI react-scripts test",
    "eject": "react-scripts eject",
    "prestart:api": "node tools/createMockDb.js",
    "start:api": "node tools/apiServer.js",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "cypress": "cypress",
    "chromatic": "chromatic test --app-code=\"gkbd875bekh\"",
    "test:all": "run-p test:ci cypress chromatic"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "bootstrap": "^4.3.0",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-scripts": "2.1.5",
    "reactstrap": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-a11y": "^4.1.11",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addon-links": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "cross-env": "^5.2.0",
    "cypress": "^3.1.5",
    "eslint-plugin-cypress": "^2.2.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.4.0",
    "husky": "^1.3.1",
    "json-server": "^0.14.2",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.2",
    "react-testing-library": "^5.8.0",
    "storybook-chromatic": "^1.2.6",
    "webpack-bundle-analyzer": "^3.0.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
